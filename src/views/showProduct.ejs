    <div class="show_product_container">
        <div class="route_link"> <a href="/home">Shopee (sendback trang chính)</a>
            <i class="ti-angle-right"></i>
            <%= infoProduct.category %>
                <i class="ti-angle-right"></i>
                <%= infoProduct.item_name %>
        </div>
        <div class="show_product_box">
            <div class="show_product_box_cover">
                <!-- <img src="image/product/<%= infoProduct.id %>.jpg" alt="lỗi hình ảnh"> -->
                <img src="/image/product/<%= infoProduct.Pid %>.jpg" alt="lỗi hình ảnh hoặc ảnh chưa đc up" />
                <div class="empty"></div>
                <div class="show_product_info">
                    <div class="product_title">
                        <%= infoProduct.item_name %>
                    </div>
                    <div class="product_status">
                        <div class="star"><span>4.8</span>
                            <i class="ti-star"></i>
                            <i class="ti-star"></i>
                            <i class="ti-star"></i>
                            <i class="ti-star"></i>
                            <i class="ti-star"></i>
                        </div>
                        <div class="evaluation"><span>1.7k</span> <span>đánh giá</span></div>
                        <div class="sold"><span>4.3k</span> <span>đã bán</span></div>
                    </div>
                    <div class="product_price_box">
                        <div class="price_header">
                            <img src="https://cf.shopee.vn/file/76b80c43b486023bb46bc0cec508431f" alt="">
                        </div>
                        <div class="product_price_cover">
                            <div class="product_price">
                                <%= infoProduct.price %> đ
                            </div>
                            <div class="product_price_more">
                                <img src="/image/gicungre.png" alt="" width="50px">
                                <div class="product_price_more_info">
                                    <div class="product_price_more_title">Gì Cũng Rẻ</div>
                                    <div class="product_price_more_desc">Giá tốt nhất so với các sản phẩm còn lại trên
                                        Shopee!
                                        <i class="ti-help-alt"></i>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="product_specific_info">
                        <div class="product_benefit_container">
