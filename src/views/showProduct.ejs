                <img src="/image/shop_logo.png" alt="" width="90px" height="90px">
            </div>
            <div class="shop_info shop_margin">
                <p class="shop_name">
                    <%= infoProduct.seller_name %>
                </p>
                <p class="online">Online 41 phút trước</p>
                <button class="chat_btn">
                    <i class="ti-email"></i>
                    Chat Ngay</button>
            </div>
        </div>
        <div class="shop_status">
            <div class="status_line">
                <div>Đánh Giá</div>
                <p>87.6K</p>
                <div>Tỉ Lệ Phản Hồi</div>
                <p>99%</p>
                <div>Tham Gia</div>
                <p>6 năm trước</p>
            </div>
            <div class="status_line">
                <div>Sản Phẩm</div>
                <p>694</p>
                <div>Thời Gian Phản Hồi</div>
                <p>trong vài giờ</p>
                <div>Người Theo Dõi</div>
                <p>334.2K</p>
            </div>
        </div>
    </div>
    <script type = "text/javascript" src="/js/showProduct.js"></script>
    <script>        
		
		addCart = function() {
            var quantity = $('#quantity').val();
            var pid = $('#Pid').val();
            $.ajax({
                type: 'POST',
                data: JSON.stringify({ product: pid, quantity: quantity}),
                dataType: 'json',
                contentType: "application/json; charset=UTF-8",
                url: location.protocol + '//' + location.host + '/addCart',
                success: function(res) {
                    Swal.fire({
                        text: "Đã thêm vào giỏ hàng.", 
                        icon: "success",
                        buttons: false,
                        showCancelButton: false,
                        showConfirmButton: false,
                        timer: 3000,
                    });
                },
                error: function() {
                    Swal.fire({
                        text: "Đã xảy ra lỗi.",
                        icon: 'warning',
                        showCancelButton: false,
                        showConfirmButton: false,
                        timer: 3000,
                    });
                    // alert("Vui lòng đăng nhập trước");
                }
            });
        }

        </script>
</body>

