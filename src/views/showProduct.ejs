                                <button class="btn-inline btn-solid-primary btn--l GfiOwy">Mua Ngay</button> <!-- class="buy"-->
                            <% }%>                                   
                            </div>
                                <!--div class="btn-1">
                                    <button class="add" type="button">Thêm Vào Giỏ Hàng</button>
                                </div-->                        
